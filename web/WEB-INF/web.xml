<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>GetItemsServlet</servlet-name>
        <servlet-class>controllers.GetItemsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>controllers.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModifyCartServlet</servlet-name>
        <servlet-class>controllers.ModifyCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QCServlet</servlet-name>
        <servlet-class>controllers.QCServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SaveOrderServlet</servlet-name>
        <servlet-class>controllers.SaveOrderServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controllers.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetItemsServlet</servlet-name>
        <url-pattern>/GetItemsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/AddItemToCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModifyCartServlet</servlet-name>
        <url-pattern>/ModifyCartServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QCServlet</servlet-name>
        <url-pattern>/QCServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveOrderServlet</servlet-name>
        <url-pattern>/SaveOrderServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>GetItemsServlet</welcome-file>
    </welcome-file-list>
</web-app>
